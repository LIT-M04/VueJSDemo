

<div class="row" id="app">
    <div class="col-md-10 col-md-offset-1">
        <button class="btn btn-primary" v-on:click="addClick">Add Person</button>
        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
            <template v-for="person in people">
                <tr>
                    <td>{{person.FirstName}}</td>
                    <td>{{person.LastName}}</td>
                    <td>{{person.Age}}</td>
                    <td>
                        <button class="btn btn-warning" v-on:click="editClick(person)">Edit</button>
                        <button class="btn btn-danger" v-on:click="deleteClick(person.Id)">Delete</button>
                    </td>
                </tr>
            </template>
        </table>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <input type="text" placeholder="First Name" class="form-control" v-model="modalPerson.firstName"/>
                    <br/>
                    <input type="text" placeholder="Last Name" class="form-control" v-model="modalPerson.lastName"/>
                    <br />
                    <input type="text" placeholder="Age" class="form-control" v-model="modalPerson.age"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" v-on:click="updateClick" v-if="editMode">Update</button>
                    <button type="button" class="btn btn-primary" v-on:click="saveClick" v-else>Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

@section scripts
{
    <script src="~/Scripts/people.js"></script>
}
