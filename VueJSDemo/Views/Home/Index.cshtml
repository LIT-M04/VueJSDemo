

<div class="row" id="app">
    <div class="col-md-6 col-md-offset-3 well">
        <input type="text" placeholder="Message" class="form-control" v-model="message" />
        <p>
            {{message}}
        </p>
        <button class="btn btn-primary" v-on:click="reverse">Reverse</button>
    </div>

    <div class="col-md-6 col-md-offset-3 well">
        <button class="btn btn-success" v-on:click="addClick">Add</button>
        <button class="btn btn-success" v-on:click="sortClick">Sort</button>
        <ul>
            <template v-for="number in numbers">
                <li style="font-size: 20px;">{{number}}</li>
            </template>
        </ul>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/index.js"></script>
}